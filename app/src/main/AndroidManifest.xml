<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="a1515.bomb4you">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity android:name=".LaunchScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegisterForm" />
        <activity android:name=".MainScreen" />
        <activity android:name=".LeaderboardDisplay"/>
        <activity android:name=".Login"></activity>
        <activity android:name=".AttackPopUp"></activity>
        <activity android:name=".ShopScreen"
            android:theme="@style/AppTheme.PopUpShop">
        </activity>

        <activity android:name=".PopUpShop"
            android:theme="@style/AppTheme.PopUpShop">
        </activity>

    </application>

</manifest>